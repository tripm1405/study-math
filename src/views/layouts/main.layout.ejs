<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="\styles\main.style.css">
  <title>Block Maths</title>
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
    >
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Select2 CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css" rel="stylesheet" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/main.style.css" />

  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  <!-- Axios -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js" integrity="sha512-JSCFHhKDilTRRXe9ak/FJ28dcpOJxzQaCd3Xg8MyF6XFjODhy/YMCM8HW0TFDckNHWUewW+kfvhin43hKtJxAw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <!-- Blockly -->
  <script src="https://unpkg.com/blockly/blockly.min.js"></script>

  <!-- Select2 JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js"></script>
    <script src="/scripts/init.script.js"></script>
</head>
<body>
  <div class="d-flex flex-column" style="width: 100vw; height: 100vh; overflow: hidden;">
      <header class="header">
          <div class="header-content">
              <img src="/images/logo.png" alt="Study Math Logo" class="logo">
              <div class="search-bar">
                  <form action="/search" method="GET">
                      <input name="search" type="text" value="<%= data?.search %>" class="form-control" placeholder="Tìm kiếm...">
                  </form>
              </div>
              <div class="ml-auto d-flex align-items-center">
                  <button class="btn transparent-btn" type="button">
                      <i class="fas fa-bell"></i>
                  </button>
                  <div class="dropdown">
                      <button class="btn dropdown-toggle transparent-btn" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                          <%= currentUser?.fullName %>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                          <li><a class="dropdown-item" href="#" id="info">Thông tin cá nhân</a></li>
                          <li><a class="dropdown-item" href="/sign-out" id="logout">Đăng xuất</a></li>
                      </ul>
                  </div>
              </div>
          </div>
      </header>
      <div class="d-flex h-full" style="flex: 1 1;">
          <div class="h-full">
              <nav class="sidebar" style="background-color:#fff8f3; flex: 0 0 240px; overflow-y: auto; overflow-x: hidden;">
                  <div class="sidebar-content">
                      <div class="welcome">Xin chào, <%= currentUser?.fullName %></div>
                      <ul class="nav flex-column">
                          <% menus.forEach(item => { %>
                              <li class="nav-item">
                                  <a class="nav-link" href="<%= item.link %>">
                                      <i class="<%= item.icon %>" ></i> <%= item.label %>
                                  </a>
                              </li>
                          <% }); %>
                      </ul>
                  </div>
              </nav>
          </div>
          <div class="content" style="width: 100%; overflow-y: auto; overflow-x: hidden;">
              <%- body %>
          </div>
      </div>
  </div>
  <script src="/scripts/main.script.js"></script>
</body>
</html>