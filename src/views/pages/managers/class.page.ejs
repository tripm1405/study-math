<style>
    .btn:hover {
        background-color: aquamarine;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    table tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }
</style>
<div class="w-full h-full">
    <div style="display: flex; justify-content: space-between;">
        <h1>Quản lí lớp học</h1>
        <button
                class="btn"
                style="background-color: #008080; color: white; font-size: 16px; cursor: pointer; border-radius: 8px; height: 40px;"
                data-bs-toggle="modal" data-bs-target="#accountModal" onClick="upsert('<%= data?.newId %>')">
            Tạo lớp học
        </button>
    </div>
    <div class="container mt-4 mb-4">
        <form method="GET" class="row ">
            <div class="col-md-4">
                <input name="code" type="text" class="form-control" placeholder="Mã lớp..." value="<%= data?.filters?.code %>" />
            </div>
            <div class="col-md-4">
                <input name="name" type="text" class="form-control" placeholder="Tên lớp..." value="<%= data?.filters?.name %>" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Lọc</button>
            </div>
        </form>
    </div>
    <div>
        <table class="table table-striped mt-3">
            <thead>
            <tr>
                <th>STT</th>
                <th>Mã lớp</th>
                <th>Tên lớp</th>
                <th>Giáo viên</th>
                <th>Số học sinh</th>
                <th style="width: 50px;"></th>
            </tr>
            </thead>
            <tbody>
            <% for (const _class of (data?.classes || [])) { %>
                <tr onClick="upsert('<%= _class?._id %>')">
                    <td><%= _class?.index %></td>
                    <td><%= _class?.code %></td>
                    <td><%= _class?.name %></td>
                    <td><%= _class?.teacher %></td>
                    <td><%= _class?.studentsCount %></td>
                    <td>
                        <button class="btn btn-danger btn-sm" onClick="del('<%= _class?._id %>')"><i class="fas fa-trash-alt"></i></button>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <div>
            <%- include(partialPath + '/pagination.partial.ejs', { ...(data || {}), model: undefined, }) %>
        </div>
    </div>
</div>

<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="errorToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Error</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            An error occurred while deleting the user.
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
    function upsert(id) {
        window.location.href = `/classes/${id}`;
    }

    async function del(id) {
        try {
            await axios.delete(`/classes/${id}`);
            Toastify({
                text: 'Xóa lớp học thành công!',
                duration: 3000,
                gravity: 'top',
                position: 'right',
                backgroundColor: '#4CAF50',
            }).showToast();
            location.reload();
        } catch (error) {
            console.error('Delete Error:', error);
            Toastify({
                text: 'Đã xảy ra lỗi khi xóa lớp học. Vui lòng thử lại sau.',
                duration: 3000,
                gravity: 'top',
                position: 'right',
                backgroundColor: '#ff6347',
            }).showToast();
        }
    }
</script>