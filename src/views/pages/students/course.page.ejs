<style>
    .course-container {
        display: flex;
        gap: 20px;
    }

    .course-card {
        width: 250px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 10px;
        text-align: left;
        cursor: pointer;
    }

    .course-card:nth-child(1) {
        background-color: #fffbcc;
    }

    .course-card:nth-child(2) {
        background-color: #ccf2ff;
    }

    .course-card:nth-child(3) {
        background-color: #edd5f8;
    }

    .course-card:nth-child(4) {
        background-color: #e3ffd7;
    }

    .course-card img {
        width: 100%;
        border-radius: 10px;
    }

    .course-title {
        font-size: 18px;
        font-weight: bold;
        margin: 10px 0 5px 0;
    }

    .course-info {
        font-size: 14px;
        color: #555;
    }
</style>

<div class="w-full h-full">
    <h1>C√°c kh√≥a h·ªçc</h1>
    
    <div class="k-container">
        <% for (const course of (data?.courses || [])) { %>
            <div onclick="detail('<%= course?._id %>')" class="k-card">
                <img src="/images/img4.png" alt="L·ªõp 2 - Nguy·ªÖn Anh">
                <div class="k-title">L·ªõp 2 - Nguy·ªÖn Anh</div>
                <div class="k-info">
                    <%= ((date) => {
                        const year = date.getFullYear();
                        const month = String(date.getMonth() + 1).padStart(2, '0');
                        const dayOfMonth = String(date.getDate()).padStart(2, '0');
                        const hour = String(date.getHours()).padStart(2, '0');
                        const minute = String(date.getMinutes()).padStart(2, '0');
                        return `${year}-${month}-${dayOfMonth} ${hour}:${minute}`
                    })(course.createdAt) %>
                </div>
                <div class="f-info">üë• 79</div>
            </div>
        <% } %>
    </div>
</div>

<script>
  function detail(id) {
    window.location.href = `/courses/${id}`;
  }
</script>