<div class="w-full h-full">
    <h1>Các khóa học</h1>
    <div class="k-container">
        <% for (const course of (data?.courses || [])) { %>
            <div onclick="onDetail('<%= course?._id %>')" class="k-card">
                <img src="<%= course?.image || '/images/course-default.jpg'%>" alt="Lớp 2 - Nguyễn Anh">
                <div class="k-title"><%= course?.name %></div>
                <div class="f-info"><%= course?.createdBy?.fullName %></div>
                <div class="k-info">
                    <%= ((date) => {
                        const year = date.getFullYear();
                        const month = String(date.getMonth() + 1).padStart(2, '0');
                        const dayOfMonth = String(date.getDate()).padStart(2, '0');
                        const hour = String(date.getHours()).padStart(2, '0');
                        const minute = String(date.getMinutes()).padStart(2, '0');
                        return `${year}-${month}-${dayOfMonth} ${hour}:${minute}`
                    })(course.createdAt) %>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script>
  function onDetail(id) {
    window.location.href = `/courses/${id}`;
  }
</script>